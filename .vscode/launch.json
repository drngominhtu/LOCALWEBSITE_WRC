        {
            "type": "chrome",
            "request": "launch",
            "name": "Open index.html in Chrome",
            "file": "${workspaceFolder}/index.html", // Use workspace-relative path
            "webRoot": "${workspaceFolder}" // Ensure the webRoot is set to the project folder
        }
    ]
}